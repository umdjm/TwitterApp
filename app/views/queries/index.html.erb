<h1>Listing queries</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Q</th>
    <th>Rpp</th>
    <th>Max</th>
    <th>Page</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @queries.each do |query| %>
  <tr>
    <td><%= query.id %></td>
    <td><%= query.q %></td>
    <td><%= query.rpp %></td>
    <td><%= query.max_id %></td>
    <td><%= query.page %></td>
    <td><%= link_to 'Show', query %></td>
    <td><%= link_to 'Edit', edit_query_path(query) %></td>
    <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

