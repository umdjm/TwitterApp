<h1>Listing tweets</h1>

<table>
  <tr>
    <th>Userid</th>
    <th>Statusid</th>
    <th>Message</th>
    <th>Screenname</th>
    <th>Messagetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.userId %></td>
    <td><%= tweet.statusId %></td>
    <td><%= tweet.message %></td>
    <td><%= tweet.screenname %></td>
    <td><%= tweet.messageTime %></td>
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

